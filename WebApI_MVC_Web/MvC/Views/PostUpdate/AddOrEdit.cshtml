@model MvC.Models.mvcPostUpdateModel
@{
    ViewBag.Title = "AddOrEdit";
}
<head>
    <link href="~/PortView/css/style.css" rel='stylesheet' type='text/css' />

    <link href="//fonts.googleapis.com/css?family=PT+Sans+Narrow:400,700" rel="stylesheet">
</head>
<br /><br />

<div class="form-body">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.Post_Update_ID)

        <div class="form-group">
            @Html.LabelFor(model => model.Post_Description, "Global updates")
            @Html.EditorFor(model => model.Post_Description)
            @Html.ValidationMessageFor(model => model.Post_Description)
        </div>

        <div class="form-group">
            @*<input type="submit" value="Submit" class="btn-button" />*@
            <button type="submit" value=""><i class="fas fa-save" style="font-size:20px;color:darkblue"></i></button>
            <button type="reset" value="Clear"><i class="fas fa-broom" style="font-size:20px;color:darkblue"></i>Clear</button>
        </div>
    }
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
}
